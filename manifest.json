{
  "manifest_version": 2,

  "name": "Goatception",
  "description": "get dem goaters",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon16.png",
    "default_popup": "popup.html"
  },

  "icons": { 
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png" 
  },

  "permissions": [
    "activeTab",
    "storage"
  ],

  "content_scripts": [
    {
      "matches": ["https://mail.google.com*"],
      "all_frames": true,
      "js": ["jquery.min.js", "gifshot.js", "helper.js", "ImgurClient.js", "popup.js"],
      "css": ["popup.css"],
      "run_at":"document_start"
    }
  ]
}